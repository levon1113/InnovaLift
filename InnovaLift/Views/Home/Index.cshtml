@using InnovaLift.Data.Entities
@model List<Text>
@{
    var images = ViewBag.Images as List<Image>;
}

<section class="main">
    <div class="container">
        <div class="main_inner">
            <div class="main_content">
                <div class="title">
                    
                    @Model.Where(a=>a.Id=="MainTitle").FirstOrDefault().Name
                </div>
                <div class="main_text">
                    @Model.Where(a=>a.Id=="MainText").FirstOrDefault().Name

                </div>
                <a href="service.html" class="main_btn">
                    @Model.Where(a=>a.Id=="AllServices").FirstOrDefault().Name
                </a>
            </div>
            <div class="main_img">
            @{
                if (true)
                    {
                        string base64Image = Convert.ToBase64String(images.Where(a => a.Id == "Main").FirstOrDefault().Data);
                        <img src="data:image/jpeg;base64,@base64Image" alt="" class="works_img">
                    }
                
            }    
            </div>
        </div>
    </div>
</section>
<section class="works">
    <div class="container">
        <div class="works_inner">
            <div class="title">
                @Model.Where(a=>a.Id=="OurWorks").FirstOrDefault().Name
            </div>
            <div class="works_content">
                @foreach(Work item in ViewBag.Works){
                    <div class="works_item">
                        @if (item.Image != null)
                        {
                            string base64Image = Convert.ToBase64String(item.Image);
                            <img src="data:image/jpeg;base64,@base64Image" alt="" class="works_img">
                        }
                        <div class="works_name">@item.Name</div>
                    </div>
                }
                
                
            </div>
        </div>
    </div>
</section>

<section class="partners">
    <div class="container">
        <div class="title">
            @Model.Where(a=>a.Id=="Partners").FirstOrDefault().Name

        </div>
        <div class="partners_inner">
            @foreach (Partner item in ViewBag.Partners)
            {
                @if (item.Image != null)
                {
                    string base64Image = Convert.ToBase64String(item.Image);
                    <img src="data:image/jpeg;base64,@base64Image" alt="" class="partners_img">
                }
            }
            

        </div>
    </div>
</section>